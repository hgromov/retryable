{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [ "ES2015" ],
    "target": "ES5",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "strict": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.*"
  ]
}